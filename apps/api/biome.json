{
  "$schema": "https://biomejs.dev/schemas/2.3.7/schema.json",
  "root": false,
  "extends": "//",
  "files": {
    "ignoreUnknown": false,
    "includes": ["src/**/*", "!src/generated/**/*", "server.js"]
  },
  "linter": {
    "rules": {
      "complexity": {
        "noStaticOnlyClass": "off"
      },
      "style": {
        "noNonNullAssertion": "off",
        "useImportType": "off"
      }
    }
  },
  "javascript": {
    "parser": {
      "unsafeParameterDecoratorsEnabled": true
    }
  }
}
