{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug API",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "${workspaceFolder}/apps/api/node_modules/.bin/tsx",
      "runtimeArgs": ["watch", "--inspect"],
      "program": "${workspaceFolder}/apps/api/src/server.dev.ts",
      "cwd": "${workspaceFolder}/apps/api",
      "restart": true,
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": ["<node_internals>/**", "node_modules/**"],
      "env": {
        "NODE_ENV": "development"
      }
    },
    {
      "name": "Debug API (Attach)",
      "type": "node",
      "request": "attach",
      "port": 9229,
      "restart": true,
      "skipFiles": ["<node_internals>/**", "node_modules/**"]
    }
  ]
}
