{
  "$schema": "https://turborepo.com/schema.json",
  "globalDependencies": [".env"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"]
    },
    "frontend#build": {
      "dependsOn": ["type-check", "lint"],
      "outputs": ["dist/**"],
      "inputs": ["$TURBO_DEFAULT$", ".env"]
    },
    "api#build": {
      "dependsOn": ["type-check", "lint"],
      "outputs": ["dist/**"],
      "inputs": ["$TURBO_DEFAULT$", ".env"]
    },
    "lint": {},
    "type-check": {},
    "dev": {
      "persistent": true,
      "cache": false,
      "interactive": true
    }
  },
  "ui": "tui"
}
