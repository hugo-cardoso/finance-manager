{
  "$schema": "https://turborepo.com/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["type-check", "lint"],
      "outputs": ["dist/**"],
      "inputs": ["apps/**/.env"]
    },
    "frontend#build": {
      "env": ["VITE_API_URL"]
    },
    "api#build": {
      "env": ["DATABASE_URL", "SUPABASE_URL", "SUPABASE_ANON_KEY", "SUPABASE_KEY", "SUPABASE_JWT_SECRET"]
    },
    "lint": {},
    "type-check": {},
    "dev": {
      "persistent": true,
      "cache": false,
      "interactive": true
    }
  },
  "ui": "tui"
}
